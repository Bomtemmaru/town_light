<%= form_with(model: tweet, local: true) do |form| %>
  <%= form.text_field :image, placeholder: "Image Url" %>
  <%= form.text_area :text, placeholder: "text", rows: "10" %>
  <%= form.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
  <%= form.collection_select(:with_id, With.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
  <%= form.collection_select(:how_id, How.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
  <%= form.text_area :way, placeholder: "through route", rows: "10" %>
  <%= form.submit "SEND" %>
<% end %>